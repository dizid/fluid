rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile, but cannot modify premium fields
    // Premium fields (isPremium, premiumActivatedAt, stripeSessionId, stripeCustomerId)
    // can only be set by the backend webhook
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow updates only if NOT modifying protected payment fields
      allow update: if request.auth != null && request.auth.uid == userId
        && !request.resource.data.diff(resource.data).affectedKeys()
            .hasAny(['isPremium', 'premiumActivatedAt', 'stripeSessionId', 'stripeCustomerId']);

      // Allow create for new users without premium fields
      allow create: if request.auth != null && request.auth.uid == userId
        && !request.resource.data.keys()
            .hasAny(['isPremium', 'premiumActivatedAt', 'stripeSessionId', 'stripeCustomerId']);
    }

    // Progress - users can only access their own progress
    match /progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Conversations - users can only access their own chat history
    match /conversations/{userId}/messages/{messageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
